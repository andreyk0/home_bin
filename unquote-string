#! /usr/bin/env nix-shell
#! nix-shell --quiet
#! nix-shell <nixpkgs>
#! nix-shell -i runghc
#! nix-shell -p "ghc.withPackages (x: [ x.base ])"

module Main where

main :: IO ()
main = do
  c <- getContents
  case reads c
    of []             -> putStrLn $ read $ "\"" ++ c ++ "\"" -- try again with surrounding quotes
       [(x,leftover)] -> do putStrLn x
                            putStrLn leftover
       ugh            -> print ugh
